<?xml version="1.0" encoding="utf-8"?>
<!--suppress CheckTagEmptyBody -->
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:focusable="true"
android:clickable="true"
android:layout_margin="8dp"
app:cardCornerRadius="10dp"
android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/inverter_Number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:paddingLeft="15dp"
                android:paddingTop="@dimen/ten_spacing"
                android:paddingBottom="@dimen/ten_spacing"
                android:text="Inverter"
                android:textColor="@color/dark_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/inverter_Data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="@dimen/five_spacing"
                android:paddingTop="@dimen/ten_spacing"
                android:paddingBottom="@dimen/ten_spacing"
                android:text="data"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/edit_Inverter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="10"
                android:src="@drawable/icon_edit_black_24"></ImageView>

            <ImageView
                android:id="@+id/delete_Inverter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="10"
                android:src="@drawable/icon_delete_black_24"></ImageView>

        </LinearLayout>

</androidx.cardview.widget.CardView>